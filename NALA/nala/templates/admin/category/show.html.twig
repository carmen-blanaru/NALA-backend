{% extends 'admin/layout.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block content %}
    <h1>Categorie {{category.name}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ category.createdAt ? category.createdAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de mise à jour</th>
                <td>{{ category.updatedAt ? category.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex">
    <a class="mt-2 mb-2 mx-2 btn btn-outline-warning btn-sm" href="{{ path('admin_category_edit', {'id': category.id}) }}" role= "button"> Modifier </a>
    {{ include('admin/category/_delete_form.html.twig') }}
    </div>

    <a href="{{ path('admin_category_list') }}" class="mt-3 text-decoration-none fst-italic text-info bg-dark w-25 text-center rounded-2"> Retour à la liste des catégories </a>

{% endblock %}
