{% extends 'admin/layout.html.twig' %}

{% block title %} Profil utilisateur {% endblock %}

{% block content %}


<div class="example-wrapper sm">

    <h3> Profil de {{user.nickname}} </h3>
        <table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
            <tr>
				<th>Pseudo</th>
				<td>{{ user.nickname }}</td>
			</tr>
            <tr>
				<th>Avatar</th>
				<td><img src="{{ asset('uploads/avatar/' ~ user.picture) }}" width="50" class="rounded-circle" alt="avatar profil"></td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>Prénom</th>
				<td>{{ user.firstname }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ user.lastname }}</td>
			</tr>
		</tbody>
	</table>
   
</div>
<div class="d-flex"> 
    <a class="mt-2 mb-2 btn btn-outline-warning btn-sm" href="{{ path('admin_user_edit', {'id': user.id})}}" role= "button"> Modifier </a>
    {{ include('admin/user/_delete_form.html.twig') }}
</div>

 <a href="{{ path('admin_user_list') }}" class="mt-3 text-decoration-none fst-italic text-info bg-dark w-25 text-center rounded-2"> Retour à la liste des utilisateurs </a>

{% endblock %}
